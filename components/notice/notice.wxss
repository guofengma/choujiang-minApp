/* components/notice/noitve.wxss */
.model-view-bg {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100002;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
}
.noticeModel{
  width: 690rpx;
  height: 1100rpx;
  margin: 0rpx auto;
  border: none;
  border-radius: 10px;
  margin-top: 500rpx;
  padding-bottom: 313rpx;
}
.notice-Header{
  position: relative;
  height: 202rpx;
  background:url('https://dnlcjxt.oss-cn-hangzhou.aliyuncs.com/xcx/noticebg.png') no-repeat center center;
  background-size:cover;
  border-radius:8px 8px 0px 0px; 
}
.notice-people{
  width: 270rpx;
  height: 200rpx;
  position: absolute;
  left: 60rpx;
  top: -130rpx;
}
.notice-people image{
  width: 270rpx;
  height: 200rpx;
}
.notice-Title{
  display: block;
  line-height: 202rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}
.noticeContent{
  height: 920rpx;
  background: #fff;
  border: none;
  border-radius: 0 0 8rpx 8rpx;
}
.contentHeader{
  height: 77rpx;
  line-height: 77rpx;
  text-align: center;
  font-size: 30rpx;
}
.contentScroll{
  width: 600rpx;
  height: 657rpx;
  margin: 0 auto;
  background: #eeeeee;
  border: none;
  overflow: hidden;
  border-radius:10rpx;
  font-size: 25rpx;
  line-height: 50rpx;
}
.contentScroll text{
  display: block;
  font-size: 28rpx;
}
.noticeBtnbox{
  width: 600rpx;
  height: 90rpx;
  margin: 45rpx auto;
}
.noticeBtn{
  width: 290rpx;
  height: 90rpx;
  background: #da2221;
  float: left;
  border: none;
  border-radius: 8rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 26rpx;
}
.noticeBtnRight{
  float: right;
}
.noticeFalse{
  background: #dddddd !important;
  color: #999 !important;
}
.closeBtn{
  position: absolute;
  bottom:-188rpx;
  left: 45%;
  width: 50rpx;
  height: 145rpx;
  z-index: 5;
}
.closeBtn image{
  width: 50rpx;
  height: 145rpx;
}