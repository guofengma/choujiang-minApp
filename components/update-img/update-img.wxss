.choose-img-view>view{
  height: 170rpx;
  width: 170rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  position: relative;
  border: 1rpx solid #eee;
}
.choose-img-view{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.userImg{
  height: 170rpx;
  width: 170rpx;
}
.selected-img{
  overflow: hidden;
  margin-bottom: 10rpx
}
.close-img{
  width: 48rpx;
  position: absolute;
  right: 0;
  top: 0
}
.choose-img-view .choose-img-holder{
  border: 2rpx dotted #c8c8c8;
}
.choose-img-holder image{
  width: 58rpx;
  margin-bottom: 8rpx;
}
.choose-img-holder{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx
}
.font-26{
  font-size: 26rpx;
}
.font-22{
  font-size: 22rpx;
}
.gray{
  color: #999;
}