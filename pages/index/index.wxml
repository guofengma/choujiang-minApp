<top-bar></top-bar>
<sign-in isTrue='{{isTrue}}' bind:closeView='closeView'></sign-in>
<notice wx:if="{{isNotice}}" bind:showNotice='showNotice'></notice>
<view class="home-page">
  <view class="home-tree"></view>
  <view class="home-Notice" catchtap='showNotice'>
  <image src="../../img/Notice.png"></image>
  </view>
  <view class="home-inside">
    <view class="inputBox">
      <input class="security-code" placeholder='请输入16位防伪码'  maxlength="16" bindinput="bindinputCode"></input>
      <view class="securit-btn" bindtap='SecurityCodeRequestHttp'>提交</view>
    </view>
    <view class="draw-number">
      <text>您有 {{isNumber}}次 摇奖机会</text>
    </view>
    <view class="home-winners">
        <view class="winners-btn">获奖名单</view>
        <view class="winners-content">
          <view class="text">
            1、获奖名单 <view class="text-width"></view>  138****8888
          </view>
          <view class="text">
            2、获奖名单 <view class="text-width"></view>  138****8888
          </view>
          <view class="text">
            3、获奖名单 <view class="text-width"></view>  138****8888
          </view>
          <view class="text">
            4、获奖名单 <view class="text-width"></view>  138****8888
          </view>
          <view class="text">
            5、获奖名单 <view class="text-width"></view>  138****8888
          </view>
          <view class="text">
            6、获奖名单 <view class="text-width"></view>  138****8888
          </view>
        </view>
    </view>    
  </view>
  <view class="home-tabar">
    <view class="home-tabar-btn">活动详情</view>
    <view class="home-tabar-btn home-btn-borders">我的奖品</view>
    <view class="home-tabar-btn" catchtap='closeView'>天天签到</view>
  </view>
  <!--红包弹框-->
  <view class="model-view-bg" wx:if="{{isShakeBox}}">
      <view class="shakeBox">
        <view class="shakeHeaderTitle">
          {{isShowModelTitle}}
        </view>
        <view class="shakeContent">
           <view class="shakeWzj" wx:if="{{isWzj}}">
            <image src="../../img/wzj.png"></image>
            <view class="shakeText">别灰心、么么哒、再接再厉！</view>
           </view>
           <view class="cardZJL" wx:if="{{iscardZJL}}">
              <image src="{{iscardUrl}}"></image>
              <view class="shakeText" style="font-weight:blod;">{{iscardName}}</view>
           </view>
           <view class="hongbao" wx:if="{{ishongbao}}">
              <image src="../../img/duoactive.png"></image>
              <view class="shakeText" style="font-weight:blod;">{{ishongbaoName}}</view>
           </view>
           <view class="Material" wx:if="{{isMaterial}}">
              <image src="{{isMaterialUrl}}"></image>
              <view class="shakeText" style="font-weight:blod;">{{isMaterialName}}</view>
           </view>
        </view>
        <view class="shakeBtnBox">
          <view class="shakeBtn" bindtap="closeBindshakeBox">继续摇奖</view>
          <view class="shakeBtn shakeBtnRight">查看奖品</view>
        </view>
      </view>
  </view>
</view>
